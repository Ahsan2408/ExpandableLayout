<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="content_text_style" format="integer">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>
    <attr name="header_text_style" format="integer">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>

    <declare-styleable name="ExpandableLayout">
        <attr name="header_layout" format="reference" />
        <attr name="content_layout" format="reference" />
        <attr name="header_text_size" format="dimension" />
        <attr name="content_text_size" format="dimension" />
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_height" format="dimension" />
        <attr name="header_text_style" />
        <attr name="content_text_style" />
        <attr name="duration" format="integer" />
        <attr name="startExpanded" format="boolean" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrow_icon" format="reference" />
        <attr name="header_title" format="string" />
        <attr name="content_text" format="string" />
        <attr name="header_color" format="color" />
        <attr name="content_color" format="color" />
        <attr name="header_padding" format="dimension" />
        <attr name="content_padding" format="dimension" />
    </declare-styleable>
</resources>